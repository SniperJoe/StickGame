{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++-10 сборка активного файла",
			"command": "/usr/bin/g++",
			"args": [
				"-g",
				"-std=c++17",
				"${workspaceFolder}/*.cpp",
				"-o",
				"${workspaceFolder}/Executable",
				"-lglfw",
				"-lvulkan",
				"-ldl",
				"-lpthread",
				"-lX11",
				"-lXxf86vm",
				"-lXrandr",
				"-lXi"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "компилятор: /usr/bin/g++"
		}
	]
}